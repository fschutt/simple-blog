{% extends 'base.html.twig' %}

{% block title %}Der Riotfive Blog - Anmelden{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}" />
{% endblock %}

{% block body %}
<header>
    <h1>Der Riotfive Blog - Neuer Blogeintrag</h1>
</header>

<aside>
    <ul>
        <li><a href="{{ path('index') }}">Startseite</a></li>
        <li><a href="{{ path('blogentry-new') }}">Neuer Blogeintrag</a></li>
        <li><a href="{{ path('blogentry-list') }}">Blogeinträge verwalten</a></li>
    </ul>
</aside>

<main>
    <form method="post">
        <label for="blogpost-header">Überschrift</label>
        <input type="text" name="blogpost-header"/>
        <label for="blogpost-slug">URL</label>
        <input type="text" name="slug" />
        <label for="blogpost-text">Text</label>
        <textarea name="blogpost-text"></textarea>
        <button type="submit">Speichern</button>
    </form>
</main>
{% endblock %}