{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}" />
{% endblock %}

{% block body %}
<header>
    <h1>Der Riotfive Blog</h1>
</header>

<aside>
    <ul>
        <li><a href="./anmelden.html">Anmelden</a></li>
        <li><a href="./registrieren.html">Registrieren</a></li>
    </ul>
</aside>

<section id="navigation">
    <form method="get">
        <input type="text" name="search-posts" placeholder="Posts durchsuchen..." />
        <button type="submit">Los!</button>
    </form>
    <div>
        <button>&lt;</button>
        <button>&gt;</button>
    </div>
</section>

<main>
    {% for entry in blog_entries %}
    <article>
         <header><h4>{{ entry.title }}</h4></header>
        <section><p>{{ entry.body }}</p></section>
    </article>
    {% endfor %}
</main>

<footer>
    <p>(C) riotfive</p>
</footer>
{% endblock %}